import java.util.*;
import java.io.*;



   
public class Create
{

   public static void createEvent()
   {
   // attributes to array, asking for input for the event file
   
    String[] eventAttr = new String[] {"Name", "Date", "Project Manager", "Client", "Partners", "Type", "Time", "Location", 
    // arraylist? if we have time with int
                                      "Employees", "Technical Stuff", "Dining", "Expenses"};
    Scanner sc = new Scanner(System.in);
    System.out.println("Enter the name of the event!");
    String name = sc.nextLine();
    System.out.println("Enter the date of the event!");
    String date = sc.nextLine();
    System.out.println("Enter the name of the Project Manager!");
    String pM = sc.nextLine();
     
      File event = new File(name + "_" + date + "_" + pM + ".txt");
      try{ event.createNewFile(); }
      catch (Exception e) { e.printStackTrace(); /*System.out.println("Error");*/ }
      
      try {
         FileWriter fileW = new FileWriter(event);
         BufferedWriter buffW = new BufferedWriter(fileW);
         //buffW.append("Test");
         buffW.close();
      }
      catch (Exception e) { e.printStackTrace(); }
     
     
   
    for( int i = 2; i < eventAttr.length; i++)
      {
         System.out.println("Insert " + eventAttr[i]);
         String input = sc.nextLine();
         try {
          BufferedWriter writer = new BufferedWriter(new FileWriter(name + "_" + date + "_" + pM + ".txt", true));
          writer.append("\n"+ eventAttr[i] + ": " + input);   
          writer.close();
          }
          catch (Exception e) { e.printStackTrace(); }
      }  
    
   }
   
}
